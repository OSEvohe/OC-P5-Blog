{% extends '@public/layout.html.twig' %}

{% block content %}
    <!-- Hero section -->
    <section class="hero-section">
        <div class="hero-slider owl-carousel">
            <div class="hero-slide-item set-bg" data-setbg="img/slider-bg-1.jpg">
                <div class="hs-text">
                    <h2 class="hs-title-1"><span>{{ profile.lastName }} {{ profile.firstName }}</span></h2>
                    <h2 class="hs-title-2"><span>Développeur</span></h2>
                    <h2 class="hs-title-3"><span>PHP/Symfony</span></h2>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero section end -->

    <section class="add-section spad">
        <div class="container">
            <div class="add-warp">
                <div class="add-slider owl-carousel">
                    <div class="as-item set-bg" data-setbg="img/add/1.jpg"></div>
                    <div class="as-item set-bg" data-setbg="img/add/2.jpg"></div>
                </div>
                <div class="row add-text-warp">
                    <div class="col-lg-4 col-md-5 offset-lg-8 offset-md-7">
                        <div class="add-text text-white">
                            <div class="at-style"></div>
                            <p class="lead pr-2">
                                {% if profile.photoUrl %} <span class="profile-photo"><img
                                            src="{{ profile.photoUrl }}"/></span>{% endif %}
                                {{ profile.teasing }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Compétences section -->
    <section class="recipes-section spad pt-0">
        <div class="container">
            <div class="section-title">
                <h2>Mes Compétences</h2>
            </div>
            {% if profile.cvUrl %}
                <div class="row pb-5">
                    <div class="col-12 text-center">
                        <div class="site-btn text-center"><a href="{{ profile.cvUrl }}" class="text-white">Voir Mon
                                CV</a>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="recipe">
                        <img src="img/recipes/php.jpg" alt="">
                        <div class="recipe-info-warp">
                            <div class="recipe-info">
                                <h3>PHP</h3>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-md-6">
                    <div class="recipe">
                        <img src="img/recipes/html.jpg" alt="">
                        <div class="recipe-info-warp">
                            <div class="recipe-info">
                                <h3>HTML - CSS</h3>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star is-fade"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="recipe">
                        <img src="img/recipes/wordpress.jpg" alt="">
                        <div class="recipe-info-warp">
                            <div class="recipe-info">
                                <h3>Wordpress</h3>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star is-fade"></i>
                                    <i class="fa fa-star is-fade"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="recipe">
                        <img src="img/recipes/sql.jpg" alt="">
                        <div class="recipe-info-warp">
                            <div class="recipe-info">
                                <h3>SQL</h3>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star is-fade"></i>
                                    <i class="fa fa-star is-fade"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="recipe">
                        <img src="img/recipes/photoshop.jpg" alt="">
                        <div class="recipe-info-warp">
                            <div class="recipe-info">
                                <h3>Photoshop</h3>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star is-fade"></i>
                                    <i class="fa fa-star is-fade"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="recipe">
                        <img src="img/recipes/linux.jpg" alt="">
                        <div class="recipe-info-warp">
                            <div class="recipe-info">
                                <h3>Linux</h3>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star is-fade"></i>
                                    <i class="fa fa-star is-fade"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Competences section end -->

    <!-- Contact Section -->
    <section class="contact-section spad pt-0" id="contact">
        <div class="container">
            <div class="section-title">
                <h2>Me contacter</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="contact-form-warp">
                        <form class="contact-form" action="/" method="post">
                            {% include '@admin/block_formError.html.twig' %}
                            {% if errors %}
                                <script type="text/javascript">window.location.hash = 'contact'</script>
                            {% endif %}
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" placeholder="Nom et Prénom" name="senderName">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" placeholder="E-mail" name="fromAddress">
                                </div>
                                <div class="col-md-12">
                                    <textarea placeholder="Votre Message" name="body"></textarea>
                                    <button class="site-btn" name="contactSubmit">Envoyer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}