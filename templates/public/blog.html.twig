{% extends '@public/layout.html.twig' %}

{% block title %}Le Blog | {{ parent() }}{% endblock %}

{% block content %}
    <!-- Hero section -->
    <section class="page-top-section set-bg" data-setbg="img/page-top-bg.jpg">
        <div class="container">
            <h2>Blog</h2>
        </div>
    </section>
    <!-- Hero section end -->

    <section class="post-list-section spad">
        <div class="container">
            <div class="row">
                {% for post in posts %}
                    <div class="col-sm-12 col-lg-6 px-5">
                        <div class="row">
                            <div class="w-100 sp-blog-item">
                                <div class="post-date">
                                    <span>{{ post.dateCreated|date('d/m') }}</span>
                                </div>
                                <div class="blog-text">
                                    <h3 class="card-title"><a href="/blog/{{ post.id }}" class="text-dark">{{ post.title }}</a></h3>
                                    <span>Par {{ post.displayName }}</span>
                                    <div><p>{{ post.lead }}</p></div>
                                    {% if post.comment_count>0 %}
                                        <em class="fa fa-comment"></em>
                                        <a href="#" class="comment">{{ post.comment_count }}
                                            commentaire{% if post.comment_count>1 %}s{% endif %}</a>
                                    {% endif %}
                                    <a href="/blog/{{ post.id }}" class="readmore"><i class="fa fa-angle-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}