{% extends '@admin/layout.html.twig' %}

{% block title %}Supprimer un réseau social{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-user mr-1"></i>
                    Supprimer le réseau social #{{ network.id }}
                </div>
                <div class="card-body">
                    <div>
                        <strong>Nom du réseau social</strong>
                        <p>{{ network.name }}</p>
                    </div>
                    <div>
                        <strong>Lien vers le profil</strong>
                        <p>{{ network.profileUrl }}</p>
                    </div>
                    <div>
                        <hr/>
                        Crée le {{ network.dateCreated.format('d-m-Y à H:i:s') }}
                        {% if network.dateCreated != network.dateModified %}
                            - Modifié le {{ network.dateModified.format('d-m-Y à H:i:s') }}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <p><strong>Voulez vous supprimer ce lien ?</strong></p>
                    <div>
                        <form method="post">
                            <button type="submit" name="social_deleteCancel">Annuler</button>
                            <button type="submit" name="social_deleteSubmit">Supprimer</button>
                            <input type="hidden" name="id" value="{{ network.id }}" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}