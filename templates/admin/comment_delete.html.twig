{% extends '@admin/layout.html.twig' %}

{% block title %}Supprimer un commentaire{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-comment mr-1"></i>
                    Supprimer le commentaire #id
                </div>
                <div class="card-body">
                    <div>
                        <strong>Commentaire</strong>
                        <p>comment</p>
                    </div>
                    <div>
                        <strong>Auteur</strong>
                        <p>userDisplayName</p>
                    </div>
                    <div>
                        <strong>Titre du post</strong>
                        <p>postTitle</p>
                    </div>
                    <div>
                        <hr/>
                        Crée le dateCreated - Modifié le dateModified
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <p><strong>Voulez vous supprimer le commentaire #1 ?</strong></p>
                    <div>
                        <form method="post">
                            <button type="submit" name="comment_deleteCancel">Annuler</button>
                            <button type="submit" name="comment_deleteSubmit">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}