{% extends '@admin/layout.html.twig' %}

{% block title %}Supprimer un commentaire{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="far fa-comment mr-1"></i>
                    Supprimer le commentaire #1
                </div>
                <div class="card-body">
                    <p><strong>Voulez vous supprimer le commentaire #1 ?</strong></p>
                    <div>
                        <form method="post">
                            <button type="submit" name="comment_deleteCancel">Annuler</button>
                            <button type="submit" name="comment_deleteSubmit">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}